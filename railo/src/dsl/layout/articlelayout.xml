<?xml version="1.0"?>
<layout extends="threecolumnlayout" ref="articlelayout">
	<region ref="main">
		<!-- de ref wordt gebruikt om binnen de xml naar nodes te kunnen verwijzen -->
		<!-- dit impliceert dat nodes zonder ref niet in het cms gewijzigd kunnen worden (en dus concreet gemaakt moeten worden in de layout) -->
		<klant.lib.Article ref="article" />
	</region>
	<region ref="side">
		<klant.lib.Author author="%article.getArticle().getAuthor()" />
	</region>
</layout>